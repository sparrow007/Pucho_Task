<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jackandphantom.stackquestion">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/stackques"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".UI.activities.OfflineActivity"></activity>
        <activity android:name=".UI.activities.WebViewActivity" />
        <activity
            android:name=".UI.activities.QuestionListActivity"
            android:label="@string/title_activity_question_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".UI.activities.LoginActivity" />
        <activity
            android:name=".UI.activities.TagSelectionActivity"
            android:theme="@style/TabAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>